  </ItemDefinitionGroup>

  <ItemGroup>
    <ProjectReference Include="$(FiberBasePath)code\Fiber.vcxproj">
      <Project>{6F360A04-03AB-4263-83E1-EABE696A4445}</Project>
    </ProjectReference>
  </ItemGroup>
</Project>
